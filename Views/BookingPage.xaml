<Page x:Class="ComputerClubDiplom.Views.BookingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerClubDiplom.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BookingPage">

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<!-- Фильтры -->
			<RowDefinition Height="Auto"/>
			<!-- Переключение даты -->
			<RowDefinition Height="*"/>
			<!-- Таблица -->
		</Grid.RowDefinitions>

		<!-- Фильтры -->
		<StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
			<TextBlock Text="Зона:" VerticalAlignment="Center" Margin="0,0,5,0"/>
			<ComboBox Width="150" SelectedIndex="0">
				<ComboBoxItem Content="Все зоны"/>
				<ComboBoxItem Content="Зона 1"/>
				<ComboBoxItem Content="Зона 2"/>
			</ComboBox>
			<TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="20,0,5,0"/>
			<TextBox Width="200" Height="25" Text="Введите номер ПК или имя клиента"/>
			<Button Content="Забронировать" Width="100" Height="25" Margin="70,0,0,0"  Click="CreateBookingButton_Click"/>
			
		</StackPanel>

		<!-- Переключение даты -->
		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
			<Button Width="30" Height="30" Content="&lt;" ToolTip="Предыдущий день"/>
			<TextBlock Text="30.03.2025" FontSize="16" VerticalAlignment="Center" Margin="10,0"/>
			<Button Width="30" Height="30" Content="&gt;" ToolTip="Следующий день"/>
		</StackPanel>

		<!-- Таблица бронирований -->
		<ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
			<Grid Background="#F0F0F0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="60"/>
					<!-- Номер ПК -->
					<ColumnDefinition Width="40"/>
					<!-- 00:00 -->
					<ColumnDefinition Width="40"/>
					<!-- 01:00 -->
					<ColumnDefinition Width="40"/>
					<!-- 02:00 -->
					<ColumnDefinition Width="40"/>
					<!-- 03:00 -->
					<ColumnDefinition Width="40"/>
					<!-- 04:00 -->
					<ColumnDefinition Width="40"/>
					<!-- 05:00 -->
					<ColumnDefinition Width="40"/>
					<!-- 06:00 -->
					<ColumnDefinition Width="40"/>
					<!-- 07:00 -->
					<ColumnDefinition Width="40"/>
					<!-- 08:00 -->
					<ColumnDefinition Width="40"/>
					<!-- 09:00 -->
					<ColumnDefinition Width="40"/>
					<!-- 10:00 -->
					<ColumnDefinition Width="40"/>
					<!-- 11:00 -->
					<ColumnDefinition Width="40"/>
					<!-- 12:00 -->
					<ColumnDefinition Width="40"/>
					<!-- 13:00 -->
					<ColumnDefinition Width="40"/>
					<!-- 14:00 -->
					<ColumnDefinition Width="40"/>
					<!-- 15:00 -->
					<ColumnDefinition Width="40"/>
					<!-- 16:00 -->
					<ColumnDefinition Width="40"/>
					<!-- 17:00 -->
					<ColumnDefinition Width="40"/>
					<!-- 18:00 -->
					<ColumnDefinition Width="40"/>
					<!-- 19:00 -->
					<ColumnDefinition Width="40"/>
					<!-- 20:00 -->
					<ColumnDefinition Width="40"/>
					<!-- 21:00 -->
					<ColumnDefinition Width="40"/>
					<!-- 22:00 -->
					<ColumnDefinition Width="40"/>
					<!-- 23:00 -->
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="30"/>
					<!-- Заголовки -->
					<RowDefinition Height="30"/>
					<!-- ПК 1 -->
					<RowDefinition Height="30"/>
					<!-- ПК 2 -->
					<RowDefinition Height="30"/>
					<!-- ПК 3 -->
					<RowDefinition Height="30"/>
					<!-- ПК 4 -->
					<RowDefinition Height="30"/>
					<!-- ПК 5 -->
					<!-- Добавьте строки до 16 или используйте ItemsControl -->
					<RowDefinition Height="30"/>
					<RowDefinition Height="30"/>
					<RowDefinition Height="30"/>
					<RowDefinition Height="30"/>
					<RowDefinition Height="30"/>
					<RowDefinition Height="30"/>
					<RowDefinition Height="30"/>
					<RowDefinition Height="30"/>
					<RowDefinition Height="30"/>
					<RowDefinition Height="30"/>
					<RowDefinition Height="30"/>
				</Grid.RowDefinitions>

				<!-- Заголовки -->
				<TextBlock Grid.Column="0" Grid.Row="0" Text="№ ПК" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
				<TextBlock Grid.Column="1" Grid.Row="0" Text="00:00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="2" Grid.Row="0" Text="01:00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="3" Grid.Row="0" Text="02:00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="4" Grid.Row="0" Text="03:00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="5" Grid.Row="0" Text="04:00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="6" Grid.Row="0" Text="05:00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="7" Grid.Row="0" Text="06:00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="8" Grid.Row="0" Text="07:00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="9" Grid.Row="0" Text="08:00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="10" Grid.Row="0" Text="09:00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="11" Grid.Row="0" Text="10:00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="12" Grid.Row="0" Text="11:00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="13" Grid.Row="0" Text="12:00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="14" Grid.Row="0" Text="13:00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="15" Grid.Row="0" Text="14:00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="16" Grid.Row="0" Text="15:00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="17" Grid.Row="0" Text="16:00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="18" Grid.Row="0" Text="17:00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="19" Grid.Row="0" Text="18:00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="20" Grid.Row="0" Text="19:00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="21" Grid.Row="0" Text="20:00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="22" Grid.Row="0" Text="21:00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="23" Grid.Row="0" Text="22:00" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="24" Grid.Row="0" Text="23:00" HorizontalAlignment="Center" VerticalAlignment="Center"/>

				<!-- Номера ПК -->
				<TextBlock Grid.Column="0" Grid.Row="1" Text="ПК 1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="0" Grid.Row="2" Text="ПК 2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="0" Grid.Row="3" Text="ПК 3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="0" Grid.Row="4" Text="ПК 4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="0" Grid.Row="5" Text="ПК 5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="0" Grid.Row="6" Text="ПК 6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="0" Grid.Row="7" Text="ПК 7" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="0" Grid.Row="8" Text="ПК 8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="0" Grid.Row="9" Text="ПК 9" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="0" Grid.Row="10" Text="ПК 10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="0" Grid.Row="11" Text="ПК 11" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="0" Grid.Row="12" Text="ПК 12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="0" Grid.Row="13" Text="ПК 13" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="0" Grid.Row="14" Text="ПК 14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="0" Grid.Row="15" Text="ПК 15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="0" Grid.Row="16" Text="ПК 16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<!-- Пример бронирований -->
				<Border Grid.Column="1" Grid.Row="1" Background="Orange" BorderBrush="#D0D0D0" BorderThickness="1" ToolTip="Забронировано"/>
				<Border Grid.Column="2" Grid.Row="1" Background="Orange" BorderBrush="#D0D0D0" BorderThickness="1" ToolTip="Забронировано"/>
				<Border Grid.Column="5" Grid.Row="2" Background="Orange" BorderBrush="#D0D0D0" BorderThickness="1" ToolTip="Забронировано"/>
				<Border Grid.Column="6" Grid.Row="2" Background="Orange" BorderBrush="#D0D0D0" BorderThickness="1" ToolTip="Забронировано"/>
				<Border Grid.Column="7" Grid.Row="2" Background="Orange" BorderBrush="#D0D0D0" BorderThickness="1" ToolTip="Забронировано"/>
				<Border Grid.Column="8" Grid.Row="2" Background="Orange" BorderBrush="#D0D0D0" BorderThickness="1" ToolTip="Забронировано"/>
				<Border Grid.Column="9" Grid.Row="2" Background="Orange" BorderBrush="#D0D0D0" BorderThickness="1" ToolTip="Забронировано"/>
				<Border Grid.Column="5" Grid.Row="2" Background="Orange" BorderBrush="#D0D0D0" BorderThickness="1" ToolTip="Забронировано"/>
				<Border Grid.Column="10" Grid.Row="3" Background="Orange" BorderBrush="#D0D0D0" BorderThickness="1" ToolTip="Забронировано"/>
				<Border Grid.Column="11" Grid.Row="3" Background="Orange" BorderBrush="#D0D0D0" BorderThickness="1" ToolTip="Забронировано"/>
				<Border Grid.Column="12" Grid.Row="3" Background="Orange" BorderBrush="#D0D0D0" BorderThickness="1" ToolTip="Забронировано"/>
				<Border Grid.Column="15" Grid.Row="4" Background="Orange" BorderBrush="#D0D0D0" BorderThickness="1" ToolTip="Забронировано"/>
			</Grid>
		</ScrollViewer>
	</Grid>
</Page>
