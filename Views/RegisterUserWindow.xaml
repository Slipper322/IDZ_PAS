<Window x:Class="ComputerClubDiplom.Views.RegisterUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerClubDiplom.Views"
        mc:Ignorable="d"
        Title="Регистрация клиента" Height="450" Width="800">
	<Grid Margin="20" Background="#F5F5F5">
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Центральный контейнер -->
		<StackPanel Grid.Row="1" Width="300" VerticalAlignment="Center">
			<TextBlock Text="Регистрация клиента" FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

			<!-- Номер телефона -->
			<TextBlock Text="Номер телефона" Margin="0,0,0,5"/>
			<TextBox Height="30" Text="+7 (XXX) XXX-XX-XX" Padding="5" Margin="0,0,0,15"/>

			<!-- Кнопка подтвердить -->
			<Button Content="Отправить код" Height="35" Width="100" HorizontalAlignment="Center"
					Background="#F0F0F0" BorderBrush="#D0D0D0" Padding="5"/>

			<!-- Код подтверждения -->
			<TextBlock Text="Код подтверждения" Margin="0,0,0,5"/>
			<TextBox Height="30" Text="XXXX" Padding="5" Margin="0,0,0,20"/>

			<!-- Кнопка подтвердить -->
			<Button Content="Подтвердить" Height="35" Width="150" HorizontalAlignment="Center"
                Background="#F0F0F0" BorderBrush="#D0D0D0" Padding="5"/>
		</StackPanel>
	</Grid>
</Window>
