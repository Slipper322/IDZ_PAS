<Page x:Class="ComputerClubDiplom.Views.ZonesAndTariffsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerClubDiplom.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ZonesAndTariffsPage">

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<!-- Кнопка "Добавить зону" -->
			<RowDefinition Height="*"/>
			<!-- Список зон -->
		</Grid.RowDefinitions>

		<!-- Кнопка "Добавить зону" -->
		<Button Grid.Row="0" Content="Добавить зону" Width="150" Height="30" 
                HorizontalAlignment="Left" Margin="0,0,0,10" 
                Background="#F0F0F0" BorderBrush="#D0D0D0"/>

		<!-- Список зон -->
		<ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
			<StackPanel Background="#F0F0F0">
				<!-- Зона 1 -->
				<Border BorderBrush="#D0D0D0" BorderThickness="1" Margin="5">
					<Grid Height="40">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<!-- Название зоны -->
							<ColumnDefinition Width="Auto"/>
							<!-- Переключатель активности -->
							<ColumnDefinition Width="Auto"/>
							<!-- Кнопка редактирования -->
							<ColumnDefinition Width="Auto"/>
						</Grid.ColumnDefinitions>
						<TextBlock Grid.Column="0" Text="Стандарт" VerticalAlignment="Center" Margin="10,0,0,0"/>
						<CheckBox Grid.Column="1" Content="Активна" IsChecked="True" VerticalAlignment="Center" Margin="10,0"/>
						<Button Grid.Column="2" Width="30" Height="30" Margin="10,0" ToolTip="Редактировать тарифы" Click="EditTariffsButton_Click">
							<Image Source="../Assets/pencil_icon.png" Width="20" Height="20"/>
						</Button>
						<Button Grid.Column="3" Width="30" Height="30" Margin="5,0" ToolTip="Удалить">
							<Image Source="../Assets/delete_icon.png" Width="20" Height="20"/>
						</Button>
					</Grid>
				</Border>

				<!-- Зона 2 -->
				<Border BorderBrush="#D0D0D0" BorderThickness="1" Margin="5">
					<Grid Height="40">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="Auto"/>
							<ColumnDefinition Width="Auto"/>
							<ColumnDefinition Width="Auto"/>
						</Grid.ColumnDefinitions>
						<TextBlock Grid.Column="0" Text="Стандарт+" VerticalAlignment="Center" Margin="10,0,0,0"/>
						<CheckBox Grid.Column="1" Content="Активна" IsChecked="False" VerticalAlignment="Center" Margin="10,0"/>
						<Button Grid.Column="2" Width="30" Height="30" Margin="10,0" ToolTip="Редактировать тарифы">
							<Image Source="../Assets/pencil_icon.png" Width="20" Height="20"/>
						</Button>
						<Button Grid.Column="3" Width="30" Height="30" Margin="5,0" ToolTip="Удалить">
							<Image Source="../Assets/delete_icon.png" Width="20" Height="20"/>
						</Button>
					</Grid>
				</Border>

				<!-- Зона 3 (пример) -->
				<Border BorderBrush="#D0D0D0" BorderThickness="1" Margin="5">
					<Grid Height="40">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="Auto"/>
							<ColumnDefinition Width="Auto"/>
							<ColumnDefinition Width="Auto"/>
						</Grid.ColumnDefinitions>
						<TextBlock Grid.Column="0" Text="VIP" VerticalAlignment="Center" Margin="10,0,0,0"/>
						<CheckBox Grid.Column="1" Content="Активна" IsChecked="True" VerticalAlignment="Center" Margin="10,0"/>
						<Button Grid.Column="2" Width="30" Height="30" Margin="10,0" ToolTip="Редактировать тарифы">
							<Image Source="../Assets/pencil_icon.png" Width="20" Height="20"/>
						</Button>
						<Button Grid.Column="3" Width="30" Height="30" Margin="5,0" ToolTip="Удалить">
							<Image Source="../Assets/delete_icon.png" Width="20" Height="20"/>
						</Button>
					</Grid>
				</Border>
			</StackPanel>
		</ScrollViewer>
	</Grid>
</Page>
