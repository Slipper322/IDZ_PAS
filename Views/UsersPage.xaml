<Page x:Class="ComputerClubDiplom.Views.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerClubDiplom.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UsersPage">

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<!-- Переключатель разделов -->
			<RowDefinition Height="Auto"/>
			<!-- Кнопки -->
			<RowDefinition Height="*"/>
			<!-- Таблица -->
		</Grid.RowDefinitions>

		<!-- Переключатель разделов -->
		<StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
			<RadioButton Content="Все пользователи" IsChecked="True" Margin="5"/>
			<!-- В будущем можно добавить другие разделы, например: -->
			<!-- <RadioButton Content="Активные пользователи" Margin="5"/> -->
		</StackPanel>

		<!-- Кнопки -->
		<StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
			<TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="0,0,5,0"/>
			<TextBox Width="200" Height="25" Text="Введите номер телефона или логин" VerticalAlignment="Center"/>
			<Button Content="Поиск" Width="80" Height="25" Margin="10,0,0,0"/>
			<Button Content="Загеристрировать клиента" Width="160" Height="25" Margin="20,0,0,0" Click="AddUserButton_Click"/>
		</StackPanel>

		<!-- Таблица пользователей -->
		<ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
			<Grid Background="#F0F0F0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="150"/>
					<!-- Номер телефона -->
					<ColumnDefinition Width="150"/>
					<!-- Логин -->
					<ColumnDefinition Width="100"/>
					<!-- Баланс -->
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="30"/>
					<!-- Заголовки -->
					<RowDefinition Height="30"/>
					<!-- Пользователь 1 -->
					<RowDefinition Height="30"/>
					<!-- Пользователь 2 -->
					<RowDefinition Height="30"/>
					<!-- Пользователь 3 -->
					<RowDefinition Height="30"/>
					<!-- Пользователь 4 -->
					<RowDefinition Height="30"/>
					<!-- Пользователь 5 -->
				</Grid.RowDefinitions>

				<!-- Заголовки -->
				<TextBlock Grid.Column="0" Grid.Row="0" Text="Номер телефона" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
				<TextBlock Grid.Column="1" Grid.Row="0" Text="Логин" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
				<TextBlock Grid.Column="2" Grid.Row="0" Text="Баланс" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>

				<!-- Примерные записи -->
				<TextBlock Grid.Column="0" Grid.Row="1" Text="+7 (910) 123-45-67" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="1" Grid.Row="1" Text="ivanov123" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="2" Grid.Row="1" Text="500 руб." HorizontalAlignment="Center" VerticalAlignment="Center"/>

				<TextBlock Grid.Column="0" Grid.Row="2" Text="+7 (915) 234-56-78" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="1" Grid.Row="2" Text="petrova_k" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="2" Grid.Row="2" Text="1200 руб." HorizontalAlignment="Center" VerticalAlignment="Center"/>

				<TextBlock Grid.Column="0" Grid.Row="3" Text="+7 (916) 345-67-89" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="1" Grid.Row="3" Text="sidorov99" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="2" Grid.Row="3" Text="300 руб." HorizontalAlignment="Center" VerticalAlignment="Center"/>

				<TextBlock Grid.Column="0" Grid.Row="4" Text="+7 (925) 456-78-90" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="1" Grid.Row="4" Text="alex_m" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="2" Grid.Row="4" Text="800 руб." HorizontalAlignment="Center" VerticalAlignment="Center"/>

				<TextBlock Grid.Column="0" Grid.Row="5" Text="+7 (926) 567-89-01" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="1" Grid.Row="5" Text="marinak" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				<TextBlock Grid.Column="2" Grid.Row="5" Text="1500 руб." HorizontalAlignment="Center" VerticalAlignment="Center"/>
			</Grid>
		</ScrollViewer>
	</Grid>
</Page>
