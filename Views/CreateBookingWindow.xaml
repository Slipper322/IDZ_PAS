<Window x:Class="ComputerClubDiplom.Views.CreateBookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerClubDiplom.Views"
        mc:Ignorable="d"
        Title="Создать бронь" Height="450" Width="800">
	<Grid Margin="20" Background="#F5F5F5">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<!-- Заголовок -->
			<RowDefinition Height="Auto"/>
			<!-- ПК -->
			<RowDefinition Height="Auto"/>
			<!-- Дата -->
			<RowDefinition Height="Auto"/>
			<!-- Имя пользователя -->
			<RowDefinition Height="Auto"/>
			<!-- Длительность сеанса -->
			<RowDefinition Height="Auto"/>
			<!-- Комментарий -->
			<RowDefinition Height="*"/>
			<!-- Отступ -->
			<RowDefinition Height="Auto"/>
			<!-- Кнопка -->
		</Grid.RowDefinitions>

		<!-- Заголовок -->
		<TextBlock Grid.Row="0" Text="Создание брони" 
                   FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

		<!-- Выбор ПК -->
		<TextBlock Grid.Row="1" Text="Выберите ПК" Margin="0,0,0,5"/>
		<ComboBox Grid.Row="1" Margin="0,25,0,15" Height="30" SelectedIndex="0">
			<ComboBoxItem Content="ПК 1"/>
			<ComboBoxItem Content="ПК 2"/>
			<ComboBoxItem Content="ПК 3"/>
			<ComboBoxItem Content="ПК 4"/>
			<ComboBoxItem Content="ПК 5"/>
			<!-- Пример списка, в будущем можно привязать к реальным данным -->
		</ComboBox>

		<!-- Дата -->
		<TextBlock Grid.Row="2" Text="Дата" Margin="0,0,0,5"/>
		<DatePicker Grid.Row="2" Margin="0,25,0,15" Height="30" 
                    SelectedDate="2025-03-30" VerticalAlignment="Center"/>

		<!-- Имя пользователя -->
		<TextBlock Grid.Row="3" Text="Имя пользователя" Margin="0,0,0,5"/>
		<TextBox Grid.Row="3" Margin="0,25,0,15" Height="30" Text="Введите имя" Padding="5"/>

		<!-- Длительность сеанса (опционально) -->
		<TextBlock Grid.Row="4" Text="Длительность сеанса (опционально)" Margin="0,0,0,5"/>
		<ComboBox Grid.Row="4" Margin="0,25,0,15" Height="30" SelectedIndex="0">
			<ComboBoxItem Content="1 час"/>
			<ComboBoxItem Content="2 часа"/>
			<ComboBoxItem Content="3 часа"/>
			<ComboBoxItem Content="5 часов"/>
		</ComboBox>

		<!-- Комментарий (опционально) -->
		<TextBlock Grid.Row="5" Text="Комментарий (опционально)" Margin="0,0,0,5"/>
		<TextBox Grid.Row="5" Margin="0,25,0,15" Height="50" Text="Например: предустановить игру" 
                 Padding="5" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

		<!-- Кнопка "Выставить бронь" -->
		<Button Grid.Row="7" Content="Выставить бронь" Width="150" Height="35" 
                HorizontalAlignment="Center" Margin="0,20,0,0" 
                Background="#F0F0F0" BorderBrush="#D0D0D0" Padding="5"/>
	</Grid>
</Window>
