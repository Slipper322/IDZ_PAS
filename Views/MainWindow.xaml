<Window x:Class="ComputerClubDiplom.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerClubDiplom.Views"
        mc:Ignorable="d"
        Title="Система управления компьютерным клубом" 
        Height="600" Width="800" 
        MinHeight="400" MinWidth="600" 
        WindowStartupLocation="CenterScreen">
	<!-- Основной стиль для светлой темы -->
	<Window.Resources>
		<Style TargetType="Button">
			<Setter Property="Background" Value="#F0F0F0"/>
			<Setter Property="BorderBrush" Value="#D0D0D0"/>
			<Setter Property="Padding" Value="10"/>
		</Style>
	</Window.Resources>

	<!-- Главная сетка для размещения элементов -->
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="100"/>
			<!-- Левая панель фиксированной ширины -->
			<ColumnDefinition Width="*"/>
			<!-- Основная область -->
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="50"/>
			<!-- Верхняя панель -->
			<RowDefinition Height="*"/>
			<!-- Центральная область -->
			<RowDefinition Height="30"/>
			<!-- Нижняя панель -->
		</Grid.RowDefinitions>

		<!-- Левая панель с кнопками вкладок -->
		<StackPanel Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" Background="#E0E0E0">
			<Button Height="80" ToolTip="Стартовое окно" Click="MainPageButton_Click">
				<Image Source="../Assets/app_icon.png" Width="64" Height="64"/>
			</Button>
			<Button Height="80" ToolTip="Карта клуба" Click="ButtonClubMap_Click">
				<Image Source="../Assets/club_map_icon.png" Width="64" Height="64"/>
			</Button>
			<Button Height="80" ToolTip="Бронирования" Click="BookingPageButton_Click">
				<Image Source="../Assets/bookings_icon.png" Width="64" Height="64"/>
			</Button>
			<Button Height="80" ToolTip="Посетители" Click="UsersPageButton_Click">
				<Image Source="../Assets/visitors_icon.png" Width="64" Height="64"/>
			</Button>
			<Button Height="80" ToolTip="Зоны и тарифы" Click="ZonesAndTariffsPageButton_Click">
				<Image Source="../Assets/zones_icon.png" Width="64" Height="64"/>
			</Button>
			
		</StackPanel>

		<!-- Верхняя панель -->
		<Grid Grid.Column="1" Grid.Row="0" Background="#F5F5F5">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>

			<!-- Название окна -->
			<TextBlock Grid.Column="0" Text="КомпКлуб Москва" 
                       VerticalAlignment="Center" Margin="10,0,0,0" FontSize="16"/>

			<!-- Кнопка с выпадающим списком клубов -->
			<ComboBox Grid.Column="2" Width="150" Height="30" Margin="10,0" 
                      VerticalAlignment="Center" IsEnabled="True">
				<ComboBoxItem Content="КомпКлуб Москва"/>
				<ComboBoxItem Content="КомпКлуб Санкт-Петербург"/>
				<!-- Список можно расширить -->
			</ComboBox>

			<!-- Иконка пользователя (выход) -->
			<Button Grid.Column="3" Width="40" Height="40" Margin="10,0" ToolTip="Выйти">
				<Image Source="Assets/user_icon.png" Width="25" Height="25"/>
			</Button>
		</Grid>

		<!-- Центральная панель с быстрым доступом -->
		<Frame Grid.Column="1" Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden" Source="/Views/MainPage.xaml"/>
		

		<!-- Нижняя панель (зарезервирована) -->
		<Border Grid.Column="1" Grid.Row="2" Background="#F0F0F0" BorderBrush="#D0D0D0" BorderThickness="1">
			<TextBlock Text="Зарезервировано для будущих функций" VerticalAlignment="Center" HorizontalAlignment="Center"/>
		</Border>
	</Grid>
</Window>
